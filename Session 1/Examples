# 1. Variables: Labeled Boxes
# A variable stores information
name = "Panchito"
age = 25
height = 1.65
is_student = True

# 2. Basic Data Types
# Text (String)
message = "Hello Python"
city = 'Mexico City'

# Whole numbers (Integer)
quantity = 100
year = 2024

# Decimal numbers (Float)
price = 49.99
temperature = 23.5

# Booleans (True/False)
has_discount = True
is_available = False

# Check the type of a variable
print(type(age))  # <class 'int'>

# 3. Basic Operations
# Arithmetic
addition = 10 + 5        # 15
subtraction = 10 - 5     # 5
multiplication = 10 * 5  # 50
division = 10 / 3        # 3.333...
integer_division = 10 // 3  # 3
modulo = 10 % 3          # 1
power = 2 ** 3           # 8

# With strings
full_name = "Juan" + " " + "PÃ©rez"  # Concatenation
repeat = "Hello " * 3  # "Hello Hello Hello "

# User input
name = input("What's your name? ")
print(f"Hello, {name}!")  # f-string (modern formatting)

