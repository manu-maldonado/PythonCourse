# Sistema de Termostato Inteligente
temperatura = 32

if temperatura > 30:
    print("ğŸŒ¡ï¸ Â¡Calor intenso! Activando aire acondicionado")
    ajuste = "Enfriamiento mÃ¡ximo"
elif temperatura > 25:
    print("ğŸ”† Temperatura agradable, ventilaciÃ³n suave")
    ajuste = "Ventilador"
elif temperatura < 18:
    print("â„ï¸ Â¡Hace frÃ­o! Activando calefacciÃ³n")
    ajuste = "CalefacciÃ³n"
else:
    print("âœ… Temperatura perfecta - No se requiere ajuste")
    ajuste = "Ninguno"

print(f"AcciÃ³n: {ajuste}")


# Sistema de Seguridad AutomÃ¡tico
sistema_activo = True
intentos_acceso = 0
max_intentos = 5

while sistema_activo:
    print("ğŸ”’ Sistema de seguridad activo...")
    
    # SimulaciÃ³n de sensor
    codigo = input("Ingresa cÃ³digo (o 'salir'): ")
    
    if codigo == "1234":
        print("âœ… Acceso autorizado. Bienvenido a casa!")
        sistema_activo = False
    elif codigo == "salir":
        print("ğŸšª Saliendo del sistema...")
        break
    else:
        intentos_acceso += 1
        print(f"âŒ CÃ³digo incorrecto. Intento {intentos_acceso}/{max_intentos}")
        
        if intentos_acceso >= max_intentos:
            print("ğŸš¨ Â¡ALERTA! Demasiados intentos fallidos")
            print("ğŸ“ Notificando a seguridad...")
            sistema_activo = False
    
print("Sistema cerrado")

# Reproductor de MÃºsica Smart Home
canciones = ["CanciÃ³n 1", "CanciÃ³n 2", "CanciÃ³n 3", "CanciÃ³n 4"]
reproduciendo = True
cancion_actual = 0

while reproduciendo and cancion_actual < len(canciones):
    print(f"\nğŸµ Reproduciendo: {canciones[cancion_actual]}")
    
    accion = input("(n)ext, (p)ause, (s)top: ").lower()
    
    if accion == "n":
        cancion_actual += 1
        continue
    elif accion == "p":
        print("â¸ï¸ MÃºsica pausada...")
        input("Presiona Enter para continuar...")
    elif accion == "s":
        print("â¹ï¸ Deteniendo reproducciÃ³n")
        break
    else:
        print("â“ Comando no reconocido")
        continue

print("ğŸ‘‹ Reproductor cerrado")


# RevisiÃ³n AutomÃ¡tica de Dispositivos
dispositivos = {
    "Luces Sala": "encendido",
    "Termostato": "activo",
    "Persianas": "cerradas",
    "Cerradura": "bloqueada",
    "CÃ¡maras": "grabando"
}

print("ğŸ  REPORTE DE ESTADO DEL HOGAR")
print("=" * 40)

for dispositivo, estado in dispositivos.items():
    # Emoji segÃºn estado
    if estado in ["encendido", "activo", "bloqueada", "grabando"]:
        emoji = "âœ…"
    elif estado == "apagado":
        emoji = "â­•"
    else:
        emoji = "âš ï¸"
    
    print(f"{emoji} {dispositivo}: {estado.upper()}")

# Con enumeraciÃ³n
print("\nğŸ“‹ LISTA NUMERADA:")
for numero, (dispositivo, estado) in enumerate(dispositivos.items(), 1):
    print(f"{numero}. {dispositivo} â†’ {estado}")


# Simulador de Consumo EnergÃ©tico
print("âš¡ CONSUMO ENERGÃ‰TICO POR ZONA Y HORA\n")

zonas = ["Sala", "Cocina", "Dormitorio"]
horas_pico = [7, 8, 9, 18, 19, 20, 21]

total_consumo = 0

for zona in zonas:
    print(f"ğŸ  {zona}:")
    consumo_zona = 0
    
    for hora in range(24):
        # Mayor consumo en horas pico
        if hora in horas_pico:
            consumo = 15  # kWh
            emoji = "ğŸ”´"
        elif 6 <= hora <= 22:
            consumo = 8   # kWh
            emoji = "ğŸŸ¡"
        else:
            consumo = 3   # kWh
            emoji = "ğŸŸ¢"
        
        consumo_zona += consumo
        
        if hora in horas_pico:
            print(f"  {emoji} {hora:02d}:00 - {consumo} kWh (Hora pico)")
    
    print(f"  Total {zona}: {consumo_zona} kWh\n")
    total_consumo += consumo_zona

print(f"ğŸ’° CONSUMO TOTAL: {total_consumo} kWh")