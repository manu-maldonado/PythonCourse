# OPERADORES BÃSICOS
a = 15
b = 4

print("=== OPERADORES ARITMÃ‰TICOS ===")
print(f"{a} + {b} = {a + b}")    # Suma
print(f"{a} - {b} = {a - b}")    # Resta
print(f"{a} * {b} = {a * b}")    # MultiplicaciÃ³n
print(f"{a} / {b} = {a / b}")    # DivisiÃ³n float
print(f"{a} // {b} = {a // b}")  # DivisiÃ³n entera
print(f"{a} % {b} = {a % b}")    # MÃ³dulo
print(f"{a} ** {b} = {a ** b}")  # Potencia

# OPERADORES DE ASIGNACIÃ“N
x = 10
print(f"\nValor inicial: x = {x}")
x += 5   # x = x + 5
print(f"DespuÃ©s de x += 5: x = {x}")
x *= 2   # x = x * 2
print(f"DespuÃ©s de x *= 2: x = {x}")


def calcular_propina(total_cuenta, porcentaje_propina):
    """
    Calcula la propina y el total a pagar
    """
    propina = total_cuenta * (porcentaje_propina / 100)
    total_pagar = total_cuenta + propina
    
    print(f"\n=== CALCULADORA DE PROPINAS ===")
    print(f"Total cuenta: ${total_cuenta:.2f}")
    print(f"Propina ({porcentaje_propina}%): ${propina:.2f}")
    print(f"Total a pagar: ${total_pagar:.2f}")
    
    return total_pagar

# Uso prÃ¡ctico
calcular_propina(85.50, 15)


# CREACIÃ“N Y MÃ‰TODOS BÃSICOS
mensaje = "  Python es un lenguaje fantÃ¡stico  "

print("Cadena original:", f"'{mensaje}'")
print("Longitud:", len(mensaje))
print("Sin espacios:", f"'{mensaje.strip()}'")
print("En mayÃºsculas:", mensaje.upper())
print("En minÃºsculas:", mensaje.lower())
print("Capitalizado:", mensaje.strip().capitalize())
print("Â¿Empieza con 'Python'?", mensaje.strip().startswith("Python"))
print("Â¿Termina con 'fantÃ¡stico'?", mensaje.strip().endswith("fantÃ¡stico"))

# FORMATEO DE CADENAS
nombre = "Carlos"
edad = 30
profesion = "ingeniero"

# Diferentes mÃ©todos de formateo
print("\n=== FORMATEO DE CADENAS ===")
print("MÃ©todo 1 (f-strings):", f"{nombre} tiene {edad} aÃ±os y es {profesion}")
print("MÃ©todo 2 (format):", "{} tiene {} aÃ±os y es {}".format(nombre, edad, profesion))
print("MÃ©todo 3 (%):", "%s tiene %d aÃ±os y es %s" % (nombre, edad, profesion))

