# DICCIONARIOS - Pares clave-valor
print("\n=== TRABAJANDO CON DICCIONARIOS ===")
estudiante = {
    "nombre": "Ana GarcÃ­a",
    "edad": 22,
    "carrera": "IngenierÃ­a",
    "calificaciones": [85, 92, 78],
    "activo": True
}

print("Diccionario del estudiante:", estudiante)
print("Nombre:", estudiante["nombre"])
print("Edad:", estudiante["edad"])

# Agregar nueva clave
estudiante["semestre"] = 5
print("DespuÃ©s de agregar semestre:", estudiante)

# Recorrer diccionario
print("\n--- InformaciÃ³n del estudiante ---")
for clave, valor in estudiante.items():
    print(f"{clave.capitalize()}: {valor}")


# SISTEMA DE CALIFICACIONES
def evaluar_calificacion(nota):
    if nota >= 90:
        return "A - Excelente"
    elif nota >= 80:
        return "B - Muy Bueno"
    elif nota >= 70:
        return "C - Bueno"
    elif nota >= 60:
        return "D - Regular"
    else:
        return "F - Reprobado"

# VERIFICADOR DE EDAD
edad = int(input("Introduce tu edad: "))

if edad >= 18:
    print("Eres mayor de edad")
    if edad >= 65:
        print("Y perteneces a la tercera edad")
else:
    print("Eres menor de edad")
    if edad < 13:
        print("Eres un niÃ±o")
    else:
        print("Eres un adolescente")


# SIMULADOR DE CAJERO AUTOMÃTICO
def cajero_automatico():
    saldo = 1000.0
    intentos = 0
    max_intentos = 3
    
    print("ðŸ’° BIENVENIDO AL CAJERO AUTOMÃTICO PYTHON ðŸ’°")
    
    while intentos < max_intentos:
        pin = input("\nIntroduce tu PIN (4 dÃ­gitos): ")
        
        if pin == "1234":
            print("âœ… PIN correcto. Acceso concedido.")
            
            # MenÃº principal
            while True:
                print(f"\nSaldo actual: ${saldo:.2f}")
                print("1. Retirar dinero")
                print("2. Depositar dinero")
                print("3. Salir")
                
                opcion = input("Selecciona una opciÃ³n (1-3): ")
                
                if opcion == "1":
                    cantidad = float(input("Cantidad a retirar: $"))
                    if cantidad <= saldo:
                        saldo -= cantidad
                        print(f"âœ… Retiro exitoso. Nuevo saldo: ${saldo:.2f}")
                    else:
                        print("âŒ Fondos insuficientes.")
                        
                elif opcion == "2":
                    cantidad = float(input("Cantidad a depositar: $"))
                    saldo += cantidad
                    print(f"âœ… DepÃ³sito exitoso. Nuevo saldo: ${saldo:.2f}")
                    
                elif opcion == "3":
                    print("ðŸ‘‹ Gracias por usar nuestro cajero. Â¡Hasta pronto!")
                    break
                else:
                    print("âŒ OpciÃ³n no vÃ¡lida.")
            
            break  # Salir del bucle de PIN
            
        else:
            intentos += 1
            intentos_restantes = max_intentos - intentos
            print(f"âŒ PIN incorrecto. Te quedan {intentos_restantes} intentos.")
    
    else:
        print("ðŸš« Demasiados intentos fallidos. Tarjeta bloqueada.")

# Ejecutar cajero
cajero_automatico()


