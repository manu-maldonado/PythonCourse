# Actividad: Identificar tipos y caracterÃ­sticas
ejemplos = [
    42,                           # int
    3.14159,                      # float
    "Hola Python",                # str
    True,                         # bool
    [1, 2, 3, 4, 5],             # list
    (10, 20, 30),                 # tuple
    {"nombre": "Ana", "edad": 25}, # dict
    {1, 2, 3, 4, 5}              # set
]

for i, ejemplo in enumerate(ejemplos, 1):
    print(f"Ejemplo {i}: {ejemplo} -> Tipo: {type(ejemplo)}")


