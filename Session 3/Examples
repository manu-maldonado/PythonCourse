# LISTAS - Colecciones ordenadas y modificables
print("=== TRABAJANDO CON LISTAS ===")
estudiantes = ["Ana", "Carlos", "MarÃ­a", "Pedro"]
calificaciones = [85, 92, 78, 88]

print("Lista de estudiantes:", estudiantes)
print("Primer estudiante:", estudiantes[0])
print("Ãšltimo estudiante:", estudiantes[-1])

# Modificar lista
estudiantes.append("Laura")  # Agregar al final
estudiantes.insert(1, "David")  # Insertar en posiciÃ³n
print("DespuÃ©s de agregar:", estudiantes)

