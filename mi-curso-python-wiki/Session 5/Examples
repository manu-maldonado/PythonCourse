#Carrito de supermercado
#Captura de productos

productos = []
producto = {}
while True:
	producto = {}
	#Ingresa el nombre del producto
	llaveObjeto = input("Ingresa el nombre del producto: ")
	
	if llaveObjeto == "fin":
		break
	
	#Ingresa el valor del objeto:
	valorObjeto = input("Ingresa el precio del producto: ")
	producto[llaveObjeto] = valorObjeto
	productos.append(producto)

	print(f"nuevo producto agregado {llaveObjeto} - ${valorObjeto}")

result = ""

#ctrl + k + c  comentar
#ctrl + k + u  descomentar
precioTotal = 0
precios = []
for elementoProducto in productos:
	print(elementoProducto.items())
	for llave, valor in elementoProducto.items():
		stringTemporal = f"{llave} - ${valor}"
		result += stringTemporal
		precioTotal += int(valor)
		precios.append(valor)

print(f"El precio maximo es: ${max(precios)}, el precio minimo: ${min(precios)} ")
print("Listado de productos capturados:")
print(result)	

print("Cantidad de productos capturados:")
print(len(productos))

print("Precio total de todos los productos:")
print(precioTotal)


