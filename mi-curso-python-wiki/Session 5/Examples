ARCHIVO: taqueriaFuncional.py
===============================================================================

def geCalcularPrecio(tipo, cantidad, extras):

    ##la poderosa logica que la clase implemente
    ## dados unos if elif
    ## return resultado
    if tipo == "Al pastor":
        precio = 20
        return (cantidad * precio) + extras
    elif tipo == "Machito":
        precio = 22
        return (cantidad * precio) + extras
    elif tipo == "Suadero":
        precio = 15
        return (cantidad * precio) + extras
    elif tipo == "Arabes":
        precio = 30
        return (cantidad * precio) + extras
    else:
        return 0

def aplicarDescuento(total, descuento):
    return total * descuento

def imprimirTicket(objetoDetalle):
    print("=")
    print("Gracias por comprar con nosotros")
    print("El detalle de su compra es:")
    print(f"Subtotal: ${objetoDetalle['totalSinDescuento']:.2f}")
    print(f"Descuento (10%): -${objetoDetalle['totalDescuento']:.2f}")
    print("-")
    print(f"Total a pagar: ${objetoDetalle['total']:.2f}")
    print("=")

def tomarOrden():
    tipoDeTacos = ["Al pastor" , "Machito", "Suadero", "Arabes"]
    listadoExtras = ["Cebolla" , "Cilantro", "Salsa verde", "Salsa Roja"]
    
    print("=")
    print("BIENVENIDO A LA TAQUERÍA")
    print("=")
    
    listadoDePedido = []
    
    # Menú de tacos disponibles con precios
    print("\nTipos de tacos disponibles:")
    print("1. Al pastor - $20")
    print("2. Machito - $22")
    print("3. Suadero - $15")
    print("4. Arabes - $30")
    
    # Preguntar si desea ordenar
    seguirOrdenando = "si"
    
    while seguirOrdenando.lower() == "si":
        print("\n--- Nueva Orden ---")
        
        # Seleccionar tipo de taco
        opcionTaco = int(input("Seleccione el número del tipo de taco (1-4): "))
        tipoTaco = tipoDeTacos[opcionTaco - 1]
        
        # Ingresar cantidad
        numeroTacos = int(input("¿Cuántos tacos desea? "))
        
        # Seleccionar extras
        print("\nExtras disponibles:")
        for i, extra in enumerate(listadoExtras, 1):
            print(f"{i}. {extra}")
        
        extrasSeleccionados = []
        costoExtras = 0
        
        agregarExtras = input("¿Desea agregar extras? (si/no): ")
        if agregarExtras.lower() == "si":
            while True:
                opcionExtra = int(input("Seleccione el número del extra (0 para terminar): "))
                if opcionExtra == 0:
                    break
                elif 1 <= opcionExtra <= 4:
                    extra = listadoExtras[opcionExtra - 1]
                    if extra not in extrasSeleccionados:
                        extrasSeleccionados.append(extra)
                        print(f"{extra} agregado.")
                    else:
                        print("Este extra ya fue agregado.")
                else:
                    print("Opción inválida.")
            
            # Costo por extras (opcional, puedes ajustar)
            if len(extrasSeleccionados) > 0:
                costoExtras = len(extrasSeleccionados) * 2  # $2 por cada extra
        
        # Calcular precio total de esta comanda
        precioComanda = geCalcularPrecio(tipoTaco, numeroTacos, costoExtras)
        
        # Crear la comanda
        comanda = {
            "TipoDeTaco": tipoTaco,
            "NumeroDeTacos": numeroTacos,
            "Precio": precioComanda,
            "Extras": extrasSeleccionados
        }
        
        listadoDePedido.append(comanda)
        print(f"\n¡Orden agregada! Total de esta orden: ${precioComanda:.2f}")
        
        # Preguntar si desea seguir ordenando
        seguirOrdenando = input("\n¿Desea agregar otra orden? (si/no): ")
    
    # Calcular el total sumando todos los precios de las comandas
    totalSinDescuento = 0
    for objetoComanda in listadoDePedido:
        totalSinDescuento += objetoComanda["Precio"]
    
    # Aplicar descuento del 10% (0.10)
    descuento = 0.10
    montoDescuento = aplicarDescuento(totalSinDescuento, descuento)
    totalConDescuento = totalSinDescuento - montoDescuento
    
    # Crear el objeto detalle con el total y descuento
    objetoDetalle = {
        "totalSinDescuento": totalSinDescuento,
        "totalDescuento": montoDescuento,
        "total": totalConDescuento
    }
    
    # Imprimir el ticket
    print("\n")
    imprimirTicket(objetoDetalle)

# Ejecutar la función
tomarOrden() 


