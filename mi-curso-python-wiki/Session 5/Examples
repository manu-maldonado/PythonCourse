===============================================================================
ARCHIVO: exercisesMaxAndDictionaries.py
===============================================================================

def getMaxMinProduct(listaProductos, isMax):
    print(f"fue invocado desde getMaxProduct como: {isMax}")
    if isMax:
        return  max(listaProductos)
    else:        
        return  min(listaProductos)

#Exercises with max and dictionaries
productos = [ 1, 49,3,19,39,0,999,14]
precioMayor = getMaxMinProduct(productos, True)  #max(productos)
precioMenor = getMaxMinProduct(productos, False)

print(f"el precio menor es:{precioMenor}, el mayor es: {precioMayor}")

#cls - limpiar consola


# un objeto puede tener muchas propiedades de 1 hasta n
productos = [
    {"nombre": "Pepsi", "precio": 20, "stock": 50},
    {"nombre": "Coca-Cola", "precio": 23, "stock": 30},
    {"nombre": "Atun", "precio": 20, "stock": 100}
]

objetoConPrecioMayor = max(productos, key=lambda x: x["precio"])
objetoConPrecioMenor = min(productos, key=lambda x: x["precio"])

print(f"esto es un objeto {objetoConPrecioMayor}")
print(f"precio mayor es:{objetoConPrecioMayor['precio']}, precio menor es:{objetoConPrecioMenor['precio']}")


